<% include ../partials/header.ejs %>

<!-- embed content here -->
<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col md-6">
            <h1><%= title %></h1>
            <button type="button" class="btn btn-primary" href="/contact-list/add">
                <i class="fa fa-plus-circle" aria-hidden="true"></i> Add a contact</button>
            <br>
            <table class="table table-bordered table-striped table-hover">
                <!-- Header Row -->
                <tr>
                    <th class="text-center">Name</th>
                    <th class="text-center">Description</th>
                </tr>

                <!-- Repeatable Template Row -->
                <% for(let count = 0; count < favouritesList.length; count++) { %>
                    <tr>
                        <td class="text-center"><%= favouritesList[count].name %></td>
                        <td class="text-center"><%= favouritesList[count].description %></td>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
</div>

<% include ../partials/footer.ejs %>